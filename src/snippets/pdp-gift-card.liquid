<section class="product-main pdp-main pdp-main--gift-card js-pdp-main--gift-card">
  <div class="product-main__container pdp__container">
    <div class="pdp-main-product-heading-mobile">
      <h1>{{ product.title }}</h1>
    </div>
    <div class="product-main__featured">
      <div class="product-main__gift-card-img">
        {%- assign img_src = product.featured_image | img_url: '1025x' -%}
        {%- include 'image',
          src: img_src,
          alt: 'Lo & Sons Gift Card' -%}
        {%- assign img_src = nil -%}
      </div>
    </div>
    <div class="product-main__holder">
      <div class="pdp-main-product-heading">
        <h1>{{ product.title }}</h1>
      </div>
      <div class="pdp-main-product-description">{{ product.description }}</div>
      <div class="pdp-form" itemprop="offers" itemscope itemtype="http://schema.org/Offer">
        <meta itemprop="priceCurrency" content="{{ shop.currency }}">
        <meta itemprop="price" content="{{ current_variant.price | divided_by: 100.00 }}">
        <link itemprop="availability" href="http://schema.org/{% if current_variant.available %}InStock{% else %}OutOfStock{% endif %}">

        <form action="/cart/add" method="post" enctype="multipart/form-data">
          {% unless product.has_only_default_variant %}
            {% for option in product.options_with_values %}
              <div class="pdp-form-size-wrapper pdp-form-size-wrapper--gift-card">
                <p class="pdp-gift-card-option-label">{{ option.name }}</p>
                <div class="pdp-variant-buttons variant-buttons js-variant-buttons-wrap">
                  {% for value in option.values %}
                    <a
                      href="#"
                      class="btn btn-secondary variant-option js-variant-option {% if option.selected_value == value %}selected{% endif %}">{{ value }}</a>
                  {%- endfor -%}
                </div>
              </div>
            {% endfor %}
          {% endunless %}
          <select name="id" id="variant-selector" class="hidden js-variant-input" data-product-select>
            {% for variant in product.variants %}
              <option
                {% if variant == current_variant %}selected="selected"{% endif %}
                {% unless variant.available %}disabled="disabled"{% endunless %}
                value="{{ variant.id }}">
                  {{ variant.title }}
              </option>
            {% endfor %}
          </select>
          <div class="hidden">
            <label for="Quantity">{{ 'products.product.quantity' | t }}</label>
            <input type="number" id="Quantity" name="quantity" value="1" min="1" disabled>
          </div>
          <div class="js-add-to-cart-wrap add-to-cart" id="add-to-cart" {% unless current_variant.available %}{% if oosPolicy == 'soldout' %} style="display: none"{% endif %}{% endunless %}>{% comment %}hide the whole element when OOS and unavailable for a waitlist{% endcomment %}
            <button
              type="submit"
              name="add"
              class="btn-lg js-add-to-cart"
              data-add-to-cart
              id="add-product-proceed">
                {{ 'products.product.add_to_cart' | t }}
            </button>
          </div>
        </form>
      <div class="pdp-main-product-description-mobile">{{ product.description }}</div>
    </div>
  </div>

  <script>
    var productJson = {{ product | json }};
  </script>
</section>

{%- assign emptyStars = nil -%}
{%- assign showSaleElements = nil -%}
{%- assign discountAmount = nil -%}
{%- assign reviewsAverage = nil -%}
{%- assign reviewsAverageInt = nil -%}
{%- assign reviewsAverageDec = nil -%}
{%- assign emptyStars = nil -%}
