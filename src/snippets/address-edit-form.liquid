<div id="EditAddress_{{ address.id }}" style="display: none;">
  <div class="account-form">
      {% form 'customer_address', address %}

      <div class="form-group floating-label {% if form.first_name != blank %}has-value{% endif %}">
        <label for="AddressFirstName_{{ form.id }}">
          {{ 'customer.addresses.first_name' | t }}
        </label>
        <input type="text"
               class="form-control"
               placeholder="{{ 'customer.addresses.first_name' | t }}"
               name="address[first_name]"
               id="AddressFirstName_{{ form.id }}"
               value="{{ form.first_name }}"
               autocapitalize="words">
      </div>

      <div class="form-group floating-label {% if form.last_name != blank %}has-value{% endif %}">
        <label for="AddressLastName_{{ form.id }}">
          {{ 'customer.addresses.last_name' | t }}
        </label>
        <input type="text"
               class="form-control"
               placeholder="{{ 'customer.addresses.last_name' | t }}"
               name="address[last_name]"
               id="AddressLastName_{{ form.id }}"
               value="{{ form.last_name }}"
               autocapitalize="words">
       </div>

      <div class="form-group floating-label {% if form.company != blank %}has-value{% endif %}">
        <label for="AddressCompany_{{ form.id }}">
          {{ 'customer.addresses.company' | t }}
        </label>
        <input type="text"
               class="form-control"
               placeholder="{{ 'customer.addresses.company' | t }}"
               name="address[company]"
               id="AddressCompany_{{ form.id }}"
               value="{{ form.company }}"
               autocapitalize="words">
      </div>

      <div class="form-group floating-label {% if form.address1 != blank %}has-value{% endif %}">
        <label for="AddressAddress1_{{ form.id }}">
          {{ 'customer.addresses.address1' | t }}
        </label>
        <input type="text"
               class="form-control"
               placeholder="{{ 'customer.addresses.address1' | t }}"
               name="address[address1]"
               id="AddressAddress1_{{ form.id }}"
               value="{{ form.address1 }}"
               autocapitalize="words">
      </div>

      <div class="form-group floating-label {% if form.address2 != blank %}has-value{% endif %}">
        <label for="AddressAddress2_{{ form.id }}">
          {{ 'customer.addresses.address2' | t }}
        </label>
        <input type="text"
               class="form-control"
               placeholder="{{ 'customer.addresses.address2' | t }}"
               name="address[address2]"
               id="AddressAddress2_{{ form.id }}"
               value="{{ form.address2 }}"
               autocapitalize="words">
      </div>

      <div class="form-group floating-label {% if form.city != blank %}has-value{% endif %}">
        <label for="AddressCity_{{ form.id }}">
          {{ 'customer.addresses.city' | t }}
        </label>
        <input type="text"
               class="form-control"
               placeholder=""
               name="address[city]"
               id="AddressCity_{{ form.id }}"
               value="{{ form.city }}"
               autocapitalize="words">
      </div>

      <div class="form-group floating-label select-wrapper has-value">
        <label for="AddressCountry_{{ form.id }}">
          {{ 'customer.addresses.country' | t }}
        </label>
        <select
          name="address[country]"
          id="AddressCountry_{{ form.id }}"
          class="form-control address-country-option"
          data-form-id="{{ form.id }}"
          data-default="{{ form.country }}">
          {{ country_option_tags }}
        </select>
      </div>
      
      <div class="row">
        <div class="col-sm-6">
          <div id="AddressProvinceContainer_{{ form.id }}" style="display: none">
            <div class="form-group floating-label select-wrapper has-value">
              <label for="AddressProvince_{{ form.id }}">
                {{ 'customer.addresses.province' | t }}
              </label>
              <select
                class="form-control"
                name="address[province]"
                id="AddressProvince_{{ form.id }}"
                data-default="{{ form.province }}">
              </select>
            </div>
          </div>
        </div>
        <div class="col-sm-6">
          <div class="form-group floating-label {% if form.zip != blank %}has-value{% endif %}">
            <label for="AddressZip_{{ form.id }}">
              {{ 'customer.addresses.zip' | t }}
            </label>
            <input type="text"
                  class="form-control"
                  placeholder="{{ 'customer.addresses.zip' | t }}"
                  name="address[zip]"
                  id="AddressZip_{{ form.id }}"
                  value="{{ form.zip }}"
                  autocapitalize="characters">
          </div>
        </div>
      </div>

      <div class="form-group floating-label {% if form.phone != blank %}has-value{% endif %}">
        <label for="AddressPhone_{{ form.id }}">
          {{ 'customer.addresses.phone' | t }}
        </label>
        <input type="tel"
               class="form-control"
               placeholder="{{ 'customer.addresses.phone' | t }}"
               name="address[phone]"
               id="AddressPhone_{{ form.id }}"
               value="{{ form.phone }}"
               pattern="[0-9\-]*">
      </div>
      
      <div class="form-group checkbox">
        {{ form.set_as_default_checkbox }}
        <label for="address_default_address_{{ form.id }}">
          {{ 'customer.addresses.set_default' | t }}
        </label>
      </div>

      <input type="submit" class="btn btn-block" value="{{ 'customer.addresses.update' | t }}">
      <button type="button" class="btn btn-block btn-secondary address-edit-close" data-title-text="{{ 'customer.addresses.title' | t }}" data-form-id="{{ form.id }}">
        {{ 'customer.addresses.cancel' | t }}
      </button>

      {% endform %}
  </div>
</div>