    cardModifiers: 'text-center smaller' %}
{%- endcapture -%}
<div class="block has-cards hidden-xs{% if withAnimations %} animate{% endif %}" {{ animateFadeInUp }}>
  <div class="row-slider">
    <div class="row">
      <div class="col-sm-4">{{ fitToteA }}</div>
      <div class="col-sm-4">{{ fitSmallA }}</div>
      <div class="col-sm-4">{{ fitLargeA }}</div>
    </div>
    <div class="row">
      <div class="col-sm-4">{{ fitToteB }}</div>
      <div class="col-sm-4">{{ fitSmallB }}</div>
      <div class="col-sm-4">{{ fitLargeB }}</div>
    </div>
    <div class="row">
      <div class="col-sm-4">{{ fitToteC }}</div>
      <div class="col-sm-4">{{ fitSmallC }}</div>
      <div class="col-sm-4">{{ fitLargeC }}</div>
    </div>
  </div>
</div>
<div class="hidden-sm hidden-md hidden-lg">
  {%- capture col1 -%} {{ fitToteA }} {%- endcapture -%}
  {%- capture col2 -%} {{ fitToteB }} {%- endcapture -%}
  {%- capture col3 -%} {{ fitToteC }} {%- endcapture -%}
  <div class="block has-cards">{% include 'discover-sliding-3-col' %}</div>

  {%- capture col1 -%} {{ fitSmallA }} {%- endcapture -%}
  {%- capture col2 -%} {{ fitSmallB }} {%- endcapture -%}
  {%- capture col3 -%} {{ fitSmallC }} {%- endcapture -%}
  <div class="block has-cards">{% include 'discover-sliding-3-col' %}</div>

