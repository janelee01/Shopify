    cardModifiers: 'text-center smaller' %}
{%- endcapture -%}
{%- capture fitSmallB -%}
  {% include 'card',
    img: 'Catalina-Comparison-tall-small-2',
    alt: 'tall woman with Catalina Deluxe Small - side view',
    title: "The Catalina Deluxe Small",
    cardModifiers: 'text-center smaller' %}
{%- endcapture -%}
{%- capture fitSmallC -%}
  {% include 'card',
    img: 'Catalina-Comparison-tall-small-3',
    alt: 'tall woman with Catalina Deluxe Small - holding at side',
    title: "The Catalina Deluxe Small",
    cardModifiers: 'text-center smaller' %}
{%- endcapture -%}

{%- capture fitLargeA -%}
  {% include 'card',
    img: 'Catalina-Comparison-tall-large-1',
    alt: 'tall woman with Catalina Deluxe Large - front view',
    title: "The Catalina Deluxe Large",
    cardModifiers: 'text-center smaller' %}
{%- endcapture -%}
{%- capture fitLargeB -%}
  {% include 'card',
    img: 'Catalina-Comparison-tall-large-2',
    alt: 'tall woman with Catalina Deluxe Large - side view',
    title: "The Catalina Deluxe Large",
    cardModifiers: 'text-center smaller' %}
{%- endcapture -%}
{%- capture fitLargeC -%}
