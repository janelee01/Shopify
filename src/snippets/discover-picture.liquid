<picture{% if (fw) %} class="fw-xs"{% endif %}>
    {% if (lg) %}<source srcset="https://cdn.shopify.com/s/files/1/2185/1497/files/{{ name }}-lg.jpg?{{ assetVersion }}{% if (retina) %}, https://cdn.shopify.com/s/files/1/2185/1497/files/{{ name }}-lg2x.jpg?{{ assetVersion }} 2x{% endif %}" media="(min-width: {{ screenLg }})" />{% endif %}
    <source srcset="https://cdn.shopify.com/s/files/1/2185/1497/files/{{ name }}-md.jpg?{{ assetVersion }}{% if (retina) %}, https://cdn.shopify.com/s/files/1/2185/1497/files/{{ name }}-md2x.jpg?{{ assetVersion }} 2x{% endif %}" media="(min-width: {{ screenMd }})" />
    <source srcset="https://cdn.shopify.com/s/files/1/2185/1497/files/{{ name }}-sm.jpg?{{ assetVersion }}" media="(min-width: {{ screenSm }})" />
