{%- assign format = 'jpg' -%}
{%- if (gif) -%}
	{%- assign format = 'gif' -%}
{%- endif -%}
<picture{% if (fw) %} class="fw-xs"{% endif %}>
    {% if (lg) %}<source srcset="https://cdn.shopify.com/s/files/1/2185/1497/files/{{ name }}-lg.{{ format }}?{{ assetVersion }}{% if (retina) %}, https://cdn.shopify.com/s/files/1/2185/1497/files/{{ name }}-lg2x.{{ format }}?{{ assetVersion }} 2x{% endif %}" media="(min-width: {{ screenLg }})" />{% endif %}
    <source srcset="https://cdn.shopify.com/s/files/1/2185/1497/files/{{ name }}-md.{{ format }}?{{ assetVersion }}{% if (retina) %}, https://cdn.shopify.com/s/files/1/2185/1497/files/{{ name }}-md2x.{{ format }}?{{ assetVersion }} 2x{% endif %}" media="(min-width: {{ screenMd }})" />
    <source srcset="https://cdn.shopify.com/s/files/1/2185/1497/files/{{ name }}-sm.{{ format }}?{{ assetVersion }}" media="(min-width: {{ screenSm }})" />
    <img src="https://cdn.shopify.com/s/files/1/2185/1497/files/{{ name }}-xs.{{ format }}?{{ assetVersion }}" alt="{{ alt }}" />
</picture>