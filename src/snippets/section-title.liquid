{%- assign withAnimations = withAnimations | default: true -%}
{%- unless title == blank -%}
<div class="container{% if withAnimations %} animate{% endif %}" {{ animateFadeInUp }}>
  <div class="row">
      <div class="col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2">                    
          <div class="section-title">
              <h2 class="title">{{ title }}</h2>
              {%- unless text == blank -%}<p>{{ text }}</p>{%- endunless -%}
          </div>
      </div>
  </div>
</div>
{%- endunless -%}