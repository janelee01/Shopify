{%- assign withAnimations = withAnimations | default: true -%}
{%- assign hTag = hTag | default: 'h2' -%}
{%- unless title == blank -%}
<div class="container{% if withAnimations %} animate{% endif %}"{% if withAnimations %} {{ animateFadeInUp }}{% endif %}>
  <div class="row">
      <div class="col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2">                    
          <div class="section-title is-{{hTag}}">
              <{{hTag}} class="title">{{ title }}</{{hTag}}>
              {%- unless text == blank -%}<p>{{ text }}</p>{%- endunless -%}
          </div>
      </div>
  </div>
</div>
{%- endunless -%}