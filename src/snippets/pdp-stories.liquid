<script src="https://unpkg.com/flickity@2/dist/flickity.pkgd.min.js"></script>
<link rel="stylesheet" href="https://unpkg.com/flickity@2/dist/flickity.min.css">


{%- assign stories = 'travel-inspiration/a-week-in-paris-alice-gao,travel-tips-guides/traveling-with-kids-9to5chic,travel-inspiration/creative-workshop-morocco-atelier-dore' | split: ',' -%}
{%- assign stories_count = stories | size -%}


{%- if(stories) -%}

<div class="section-heading">
  <h2 class="title">Stories</h2>
</div>

<div class="pdp-stories">

{%- for handle in stories -%}
{% assign article = articles[handle] %}

  <article>

    <figure>
      {{ article | featured_image | img_url: '380x215', crop: 'center' | img_tag }}
    </figure>

    <h4>{{ article.title }}</h4>

  </article>

{%- endfor -%}

</div>
{%- endif -%}


<script>console.log('PDP Stories')</script>
