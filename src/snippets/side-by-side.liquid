<div class="container">
	<div class="row topic-block aligned-sm mb-negate-xs">
		<div class="col-sm-6 {% if block.settings.swapOrder %}col-sm-push-6{% endif %}">
			<div class="fw-xs">
			{% if block.settings.video != blank %}
				{% comment %} standard embeds, in case we want to make this simpler later
					{% if block.settings.video.type == 'youtube' %}
						<iframe width="560" height="315" src="https://www.youtube.com/embed/{{ block.settings.video.id }}" frameborder="0" gesture="media" allow="encrypted-media" allowfullscreen></iframe>
					{% else %}
						<iframe src="https://player.vimeo.com/video/{{ block.settings.video.id }}" width="640" height="360" frameborder="0" webkitallowfullscreen mozallowfullscreen allowfullscreen></iframe>
					{% endif %}			
				{% endcomment %}
        		<div class="inline-video {{ block.settings.videoRatio }}">
	            	<div class="embed-container"
	            		data-desktop-url="{{ block.settings.video }}"
	            		data-mobile-url="{{ block.settings.mobileVideo }}"
	            		data-autoplay="{{ block.settings.autoplay }}"
	            		data-loops="{{ block.settings.loops }}">
	            		<video id="video-{{ block.id }}" width="100%" loop muted playsinline="true" poster="{{ block.settings.image | img_url: 'master' }}"></video>
	            		<a href="#" class="video-trigger" {% if block.settings.autoplay %}style="display: none"{% endif %}>Play Video
	            			<svg viewBox="0 0 90 90" version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">
	            			    <g id="Page-1-{{ block.id }}" stroke="none" stroke-width="1" fill="none" fill-rule="evenodd">
	            			        <path d="M45,90 C69.8528137,90 90,69.8528137 90,45 C90,20.1471863 69.8528137,0 45,0 C20.1471863,0 0,20.1471863 0,45 C0,69.8528137 20.1471863,90 45,90 Z M35,30 L62,45.5 L35,61 L35,30 Z" id="section-{{ block.id }}-play-icon" fill="#FFFFFF"></path>
	            			    </g>
	            			</svg>
	            		</a>
	            		<div class="loading"></div>
	            	</div>
        		</div>
    		{% else %}
				<img src="{{ block.settings.image | img_url: 'master' }}" alt="{{ block.settings.image.alt }}">
    		{% endif %}
    		</div>
		</div>
		<div class="col-sm-5 col-md-4 {% unless block.settings.swapOrder %}col-sm-offset-1{% endunless%} {% if block.settings.swapOrder %}col-sm-pull-6{% endif %}">
			<div class="topic-content">
		        {% unless block.settings.title == blank %}
		        	<h3 class="title">{{ block.settings.title }}</h3>
		        {% endunless %}
		        {% unless block.settings.description == blank %}
		        	<p class="description">{{ block.settings.description }}</p>
		        {% endunless %}
	            <div class="btn-set">
			        {% unless block.settings.linkText == blank %}
				        <a class="btn{% if block.settings.linkStyle == 'outline' %} btn-secondary{% endif %}" href="{{ block.settings.linkUrl }}">{{ block.settings.linkText }}</a>
			        {% endunless %}
	                {% unless block.settings.linkTextB == blank %}
	        	        <a class="btn{% if block.settings.linkStyleB == 'outline' %} btn-secondary{% endif %}" href="{{ block.settings.linkUrlB }}">{{ block.settings.linkTextB }}</a>
	                {% endunless %}
	                {% unless block.settings.linkTextC == blank %}
	        	        <a class="btn{% if block.settings.linkStyleC == 'outline' %} btn-secondary{% endif %}" href="{{ block.settings.linkUrlC }}">{{ block.settings.linkTextC }}</a>
	                {% endunless %}
	            </div>
			</div>
		</div>
	</div>
</div>