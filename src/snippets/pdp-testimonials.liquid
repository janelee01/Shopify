<div class="section-heading">
  <h2 class="title">What Others Are Saying</h2>
</div>

{% comment %} In pdp-testimonials.liquid {% endcomment%}

{%- assign testimonials = testimonials | default: blank -%}

<div class="pdp-testimonials">

  <div class="pdp-testimonials-logos">

{%- for testimonial in testimonials -%}
{%- assign image_src = testimonial | split: '|' | first -%} {%- assign text = testimonial | split: '|' | last -%}


  <div class="pdp-testimonials-logos-item">
    <span>
      <img src="{{ image_src }}" />
    </span>
  </div>

{%- assign image_src = nil -%} {%- assign text = nil -%}

{%- endfor -%}

  </div>

  <div class="pdp-testimonials-texts">

{%- for testimonial in testimonials -%}
{%- assign image_src = testimonial | split: '|' | first -%} {%- assign text = testimonial | split: '|' | last -%}

<p>{{ text }}</p>

{%- assign image_src = nil -%} {%- assign text = nil -%}

{%- endfor -%}

  </div>

</div>

{%- assign testimonials = nil -%}
