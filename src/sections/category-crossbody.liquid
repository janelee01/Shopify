{% include 'vars' %}

{% for block in section.blocks %}
	{% case block.type %}

		{% when 'hero' %}
		{% include 'hero' %}

		{% when 'lead' %}
		{% include 'section-heading' %}

		{% when 'product' %}
		{% include 'category-product' %}

	{% endcase %}
{% endfor %}

