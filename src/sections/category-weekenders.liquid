{% include 'discover-vars' %}

{% for block in section.blocks %}
	<div {{ block.shopify_attributes }}>
		{% case block.type %}

			{% when 'hero' %}
			{% include 'discover-category-hero' %}

			{% when 'lead' %}
			{% include 'discover-category-lead' %}

			{% when 'product' %}
			{% include 'discover-category-product' %}

		{% endcase %}
	</div>
	{% endfor %}

{% schema %}
{
	"name": "Content Manager",
	"blocks": [
		{
			"type": "lead",
			"name": "Page Lead",
			"settings": [
				{
					"id": "title",
					"type": "text",
					"label": "Title"
				},
				{
					"id": "description",
					"type": "text",
					"label": "Description"
				}
			]
		},
		{
			"type": "hero",
			"name": "Hero",
			"settings": [
				{
					"id": "mobileImage",
					"type": "image_picker",
					"label": "Mobile Image"
				},
				{
					"id": "tabletImage",
					"type": "image_picker",
					"label": "Tablet Image"
				},
				{
					"id": "desktopImage",
					"type": "image_picker",
					"label": "Desktop Image"
				},
				{
					"id": "altText",
					"type": "text",
					"label": "Alt Text"
				},
				{
					"type": "text",
					"id": "title",
					"label": "Title"
				},
				{
					"type": "radio",
					"id": "xsPos",
					"label": "Title Position - Mobile",
					"options": [
						{ "value": "left-xs", "label": "Left" },
						{ "value": "center-xs", "label": "Center" },
						{ "value": "right-xs", "label": "Right" }
					]
				},
				{
					"type": "radio",
					"id": "smPos",
