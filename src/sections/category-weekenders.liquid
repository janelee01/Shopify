				{
					"type": "url",
					"id": "linkUrlB",
					"label": "Link B -- URL"
				},
				{
					"type": "radio",
					"id": "linkStyleB",
					"label": "Link B -- Style",
					"options": [
						{ "value": "default", "label": "Default" },
						{ "value": "outline", "label": "Outline" }
					]
				}
			]
		}
	]
}
{% endschema %}