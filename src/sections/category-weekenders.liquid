					"options": [
						{ "value": "left-sm", "label": "Left" },
						{ "value": "center-sm", "label": "Center" },
						{ "value": "right-sm", "label": "Right" }
					]
				},
				{
					"type": "radio",
					"id": "mdPos",
					"label": "Title Position - Desktop",
					"options": [
						{ "value": "left-md", "label": "Left" },
