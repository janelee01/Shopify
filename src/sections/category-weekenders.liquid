		{
			"type": "product",
			"name": "Product",
			"settings": [
				{
					"id": "image1",
					"type": "image_picker",
					"label": "Image 1",
					"info": "840px by 1120px"
				},
				{
					"id": "image2",
					"type": "image_picker",
					"label": "Image 2"
				},
				{
					"id": "image3",
					"type": "image_picker",
					"label": "Image 3"
				},
				{
					"id": "image4",
					"type": "image_picker",
					"label": "Image 4"
				},
				{
					"type": "text",
					"id": "title",
					"label": "Title"
				},
				{
					"type": "text",
					"id": "description",
					"label": "Description"
				},
				{
					"type": "text",
					"id": "price",
					"label": "Price"
				},
				{
					"type": "text",
					"id": "linkText",
					"label": "Link A -- Text"
				},
				{
					"type": "url",
