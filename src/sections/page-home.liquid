{% include 'vars' %}
{% for block in section.blocks %}
	{% case block.type %}

		{% when 'hero' %}
		{% include 'builder-hero' %}

		{% when 'sectionHeading' %}
		{% include 'section-heading' %}

		{% when 'columns' %}
		{% include 'side-by-side' %}

	{% endcase %}
{% endfor %}

