{% include 'vars' %}

<div class="max-container">
	<div class="hero has-slides">
		{% for block in section.blocks %}
			{% if block.type == 'heroSlide' %}
	 			{% include 'hero-slide' %}
			{% endif %}
		{% endfor %}
	</div>
</div>

{% for block in section.blocks %}
	{% case block.type %}

		{% when 'sectionHeading' %}
		{% include 'section-heading' %}

		{% when 'productGroup' %}
		{% include 'product-group' %}

		{% when 'feature' %}
		{% include 'feature-single' %}

		{% when 'features' %}
		{% include 'feature-single' %}

	{% endcase %}
{% endfor %}

