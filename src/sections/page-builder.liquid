            "id": "desktopImage",
            "type": "image_picker",
            "label": "Desktop Image"
          },
          {
            "id": "altText",
            "type": "text",
            "label": "Alt Text"
          },
          {
             "type": "checkbox",
             "id": "disableTopMargin",
             "default": false,
             "label": "Remove Top Margin"
          },
          {
             "type": "checkbox",
             "id": "disableBottomMargin",
             "default": false,
             "label": "Remove Bottom Margin"
          }
        ]
      },
      {
        "type": "slider",
        "name": "Slider" 
      }
      
    ]
  }
{% endschema %}