{% for block in section.blocks %}
	<div class="page-block theme-{{ block.settings.textColor }}"
		style="{%- if block.settings.disableBottomMargin -%} margin-bottom: 0;{%- endif -%}"
		{{ block.shopify_attributes }}>
		{% case block.type %}

			{% when 'sectionHeading' %}
			{% include 'section-heading' %}
			
			{% when 'hero' %}
			{% include 'builder-hero' %}

			{% when 'columns' %}
			{% include 'builder-columns' %}

		{% endcase %}
	</div>
	{% endfor %}

