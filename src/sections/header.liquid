<div data-section-id="{{ section.id }}" data-section-type="header-section">
  
  <header role="banner" id="site-header">
    <div class="container-fluid">
        <nav class="navbar navbar-default" role="navigation">
          {% if template.name == 'index' %}
            <h1 class="logo" itemscope itemtype="http://schema.org/Organization">{{ shop.name }}</h1>
          {% else %}
            <a href="/" class="logo" itemscope itemtype="http://schema.org/Organization">{{ shop.name }}</a>
          {% endif %}
          
          <a href="#" class="navbar-toggle">
            <span class="sr-only">Menu</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </a>

          <a href="/cart" class="cart-toggle">
            <span class="sr-only">{{ 'layout.cart.title' | t }}</span>
            <span class="badge {% if cart.item_count < 1 %}no-items{% endif %}" id="cart-count-sm">{{ cart.item_count }}</span>
          </a>

        </nav>
    </div>

