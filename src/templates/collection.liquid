{% paginate collection.products by 25 %}

{% case collection.metafields["global"]["layout"] %}
  {% when 'by-collection' %}
    shopping by collection

  {% when 'by-color' %}
  
    {%- capture allProducts -%}
    {%- for product in collection.products -%}
      {{ product.title | split: '-' | last | split: '/' | first | handleize }}|
    {%- endfor -%}
    {%- endcapture -%}
    {%- assign productGroups = allProducts | split: '|' | uniq -%}

    <header class="page-header is-collection" data-collection="{{ collection.id }}">
      <h1>{{ collection.title }}</h1>
      {{ collection.description }}
    </header>
    {% for groupHandle in productGroups %}
    <div class="max-container">
      {% assign groupCollection = collections[groupHandle] %}
      <div class="container">
        <div class="section-heading">
            <h2 class="title">{{ groupCollection.title }}</h2>
            <p class="description">{{ groupCollection.description }}</p>
        </div>
        <div class="product-grid">
          <div class="row">
            {% paginate groupCollection.products by 4 %}
            {% for product in groupCollection.products %}
            <div class="col-xs-6 col-sm-3">
              {% include 'product-item' with product %}
            </div>
            {% endfor %}
            {% endpaginate %}
          </div>
        </div>
      </div>
    </div>
    {% endfor %}

  {% when 'by-type' %}

    {%- capture allProducts -%}
    {%- for product in collection.products -%}
      {{ product.type | handleize }}|
    {%- endfor -%}
    {%- endcapture -%}
    {%- assign productGroups = allProducts | split: '|' | uniq -%}

    <header class="page-header group-of-collections">
      <h1>{{ collection.title }}</h1>
      <p>{{ collection.description }}</p>
    </header>
    {% for groupHandle in productGroups %}
    <section class="max-container">
      {% assign groupCollection = collections[groupHandle] %}
      {% include 'collection-hero' %}
      <div class="container">
        <div class="group-options">
          {{ groupCollection.metafields["global"]["configuration-options"] }} / {{ groupCollection.products_count }} colors available <a href="{{ groupCollection.products.first.url }}">Shop all colors &gt;</a>
        </div>
        <div class="product-row">
          {% paginate groupCollection.products by 25 %}
            {% for product in groupCollection.products %}
              <div class="item">{% include 'product-item', product: product, hideName: true %}</div>
            {% endfor %}
          {% endpaginate %}
        </div>
      </div>
    </section>
    {% endfor %}

  {% when 'generic-with-image' %}

    generic layout, but has an image

  {% else %}

    {%- capture allProducts -%}
    {%- for product in collection.products -%}
      {{ product.title | split: ' - ' | first }}|
    {%- endfor -%}
    {%- endcapture -%}
    {%- assign productGroups = allProducts | split: '|' | uniq -%}

    {% assign groupCollection = collection %}
    {% assign noHeroButton = true %}
    {% include 'collection-hero' %}

    <div class="container" id="product-families">
      {%- for parentProductName in productGroups -%}
      <div class="product-family" data-family-name="{{ parentProductName | handleize }}" data-content-category="{{ parentProductName }}">
        <div class="section-heading">
          <h2 class="title">{{ parentProductName | remove: "The " }}</h2>
        </div>
        <div class="product-grid">
          <div class="row">
            {% for product in collection.products %}
              {%- assign productNameParts = product.title | split: ' - ' -%}
              {% if productNameParts[0] != parentProductName %}{% continue %}{% endif %}
              {%- assign priceClass = 'p-0-100' -%}
              {%- assign thisPrice = product.price | divided_by: 100 -%}
              {%- if thisPrice >= 100 and thisPrice <= 200 -%}{%- assign priceClass = 'p-100-200' -%}{%- endif -%}
              {%- if thisPrice >= 200 and thisPrice <= 300 -%}{%- assign priceClass = 'p-200-300' -%}{%- endif -%}
              {%- if thisPrice >= 300 and thisPrice <= 400 -%}{%- assign priceClass = 'p-300-400' -%}{%- endif -%}
              {%- if thisPrice >= 400 and thisPrice <= 500 -%}{%- assign priceClass = 'p-400-500' -%}{%- endif -%}
              <div class="col-xs-6 col-sm-3 f-hook{% for tag in product.tags %} f-{{ tag | handleize }}{% endfor %} {{ priceClass }}">
                {% include 'product-item' with product %}
              </div>
            {% endfor %}
          </div>
        </div>
      </div>
      {%- endfor -%}
      <div id="filter-alert" style="display: none" class="alert alert-warning">No products match your filter selections.</div>
      {% if paginate.pages > 1 %}
      {% comment %}{% include 'pagination' %}{% endcomment %}
      {% comment %} js hooks into this to get subsequent pages {% endcomment %}
        <div class="ajax-pagination" style="display: none" aria-hidden="true">
          {% for i in (1..paginate.pages) %}
            {% if i == 1 %}
              {% continue %}
            {% else %}
            <a href="{{ canonical_url }}?page={{ i }}">{{ i }}</a>
            {% endif %}
          {% endfor %}
        </div>
      {% endif %}
    </div>
    {% comment %}
      JS pulls this text into a master list of all skus after the AJAX is done getting subsequent pages
      The final list is pushed to GTM for a ViewContent facebook event
    {% endcomment %}
    <div id="content-ids" style="display: none"> 
      {%- for product in collection.products -%}{{ product.variants.first.sku }},{%- endfor -%}
    </div>
    
{% endcase %}

{% endpaginate %}