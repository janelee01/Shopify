<div class="container-fluid">
  <div class="content">
      <div class="checkout-header">
         <h1 class="checkout-title">{{ 'cart.general.title' | t }}</h1>
         {{ 'cart.general.continue_browsing_html' | t }}
      </div>
      {% if cart.item_count > 0 %}
        <form id="cart-items" action="/cart" method="post" novalidate>
          <table id="shopping-cart-table" class="table cart-items responsive-table">
            <thead class="small--hide">
              <tr>
                <th colspan="3">{{ 'cart.label.product' | t }}</th>
                <th>{{ 'cart.label.price' | t }}</th>
                <th>{{ 'cart.label.quantity' | t }}</th>
                <th>{{ 'cart.label.total' | t }}</th>
              </tr>
            </thead>
            <tbody>

              {% for item in cart.items %}

              {% comment %}

              Cart Item Template
              =====================
              The data-label attributes on <td> elements are mobile-friendly
              helpers used for responsive-table labels
              {% endcomment %}

                <tr class="responsive-table-row">
                  <td class="cart-item-remove">
                      <a href="/cart/change?line={{ forloop.index }}&amp;quantity=0" class="remove-item"
                          data-item-id=""
                          data-product-id=""
                          data-simple-sku="" 
                          data-product-sku="" 
                          data-product-name="" 
                          data-product-qty="" 
                          data-product-price=""
                          data-product-variant="" 
                          ><i class="ss-icon">delete</i><span class="sr-only">{{ 'cart.general.remove' | t }}</span></a>
                  </td>

                  <td class="cart-item-thumb" data-label="{{ 'customer.order.product' | t }}">

                    {% if item.image != blank %}
                      <a href="{{ item.url | within: collections.all }}">
                        {{ item | img_url: '150x150' | img_tag: item.title }}
                      </a>
                    {% endif %}

                  </td>
                  <td class="cart-item-info">
                    <a class="product-name" href="{{ item.url }}">{{ item.product.title }}</a>

                    {% unless item.product.has_only_default_variant %}
                      <p>{{ item.variant.title }}</p>
                    {% endunless %}

                    {% comment %}<p>{{ item.vendor }}</p>{% endcomment %}

                    {%- assign property_size = item.properties | size -%}

                    {% if property_size > 0 %}
                    <p class="item-options">
                      {% for p in item.properties %}
                        <span class="item-option">
                          {% unless p.last == blank %}
                          {{ p.first }}:
                            {% if p.last contains '/uploads/' %}
                              <a href="{{ p.last }}">{{ p.last | split: '/' | last }}</a>
                            {% else %}
                              {{ p.last }}
                            {% endif %}
                          {% endunless %}
                        </span>
                      {% endfor %}
                    </p>
                    {% endif %}
                  </td>
                  <td class="cart-item-price" data-label="{{ 'cart.label.price' | t }}">
                    {% if item.original_line_price != item.line_price %}
                      <span class="visually-hidden">{{ 'cart.label.discounted_price' | t }}</span>
                      {{ item.price | money }}
                      <span class="visually-hidden">{{ 'cart.label.original_price' | t }}</span>
                      <s>{{ item.original_price | money }}</s>
                    {% else %}
                      {{ item.price | money }}
                    {% endif %}
                  </td>
                  <td class="cart-item-qty" data-label="{{ 'cart.label.quantity' | t }}">
                    <input type="number"
                           name="updates[]"
                           id="updates_{{ item.key }}"
                           value="{{ item.quantity }}"
                           min="0"
                           class="qty"
                           maxlength="12"
                           aria-label="{{ 'cart.general.item_quantity' | t }}">
                  </td>
                  <td class="cart-item-subtotal" data-label="{{ 'cart.label.total' | t }}">
                    <span class="price-box">{{ item.line_price | money }}</span>
                  </td>
                </tr>

              {% endfor %}
            </tbody>
          </table>

          {% if settings.cart_notes_enable %}
          <div class="cart-tools">
            <label for="CartSpecialInstructions">{{ 'cart.general.note' | t }}</label>
            <textarea name="note" id="CartSpecialInstructions">{{ cart.note }}</textarea>
          </div>
          {% endif %}

          <table id="shopping-cart-totals-table" class="cart-totals">
            <tbody>
              <tr class="line-item" id="subtotal-row">
                <td>{{ 'cart.general.subtotal' | t }}</td>
                <td class="item-total a-right">{{ cart.total_price | money }}</td>
              </tr>
              {% if cart.total_discounts > 0 %}
              <tr class="line-item total-adjustment" id="coupon-row">
                <td>{{ 'cart.general.savings' | t }}</td>
                <td class="item-total a-right" id="coupon-total">{{ cart.total_discounts | money }}</td>
              </tr>
              {% endif %}
              </tbody>
          </table>

          <ul class="checkout-types">
            <li><input type="submit" name="update" class="btn btn-secondary" value="{{ 'cart.general.update' | t }}"></li>
            <li><input type="submit" name="checkout" class="btn" value="{{ 'cart.general.checkout' | t }}"></li>
          </ul>

          <p id="checkout-message">{{ 'cart.general.shipping_at_checkout' | t }}</p>

        </form>
      {% else %}

        {% comment %}
        Cart empty state
        {% endcomment %}
        <div class="supports-cookies">
          <p>{{ 'cart.general.empty' | t }}</p>
          <p>{{ 'cart.general.continue_browsing_html' | t }}</p>
        </div>

        {% comment %}
        Cart no cookies state
        ---------------------
        Browser cookies are required to use the cart. If cookies aren't enabled in the
        browser a message is displayed prompting the user to enable them.
        {% endcomment %}
        <div class="supports-no-cookies">
          <p>{{ 'cart.general.cookies_required' | t }}</p>
        </div>
      {% endif %}
  </div>
</div>
