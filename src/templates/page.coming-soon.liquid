<h1 class="sr-only">{{ page.title }}</h1>
{% section 'page-coming-soon' %}
<div class="more-window" id="comingsoon">
  <div class="inner">
    {% include 'section-title', withAnimations: false, title: "Join the waitlist" %}
    <div class="container">
      <div class="row">
        <div class="col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
          <form id="coming-soon-signup">
            <label for="coming-soon-email" class="sr-only">enter email address</label>
            <div class="form-group">
              <input type="email" id="coming-soon-email" class="form-control" placeholder="Enter email address" />
              <button class="btn" id="coming-soon-submit">
                Submit {% include 'header-icons', icon: 'arrow' %}
              </button>
            </div>
          </form>
          <div id="coming-soon-success" class="alert alert-success" style="display: none">
            <strong>Thanks for subscribing!</strong> Please check your inbox to confirm sign-up.
          </div>
        </div>
      </div>
    </div>
  </div>
  <button class="panel-close"><span class="sr-only">close</span></button>
</div>
