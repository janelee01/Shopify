{% capture email_title %}Thank you for your purchase! {% endcapture %}
{% capture email_body %}
  {% if requires_shipping %}
    Hi {{ customer.first_name }}, we're getting your order ready to be shipped. We will notify you when it has been sent.
  {% endif %}
{% endcapture %}

<!DOCTYPE html>
<html lang="en">
  <head>
  <title>{{ email_title }}</title>
  <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
  <meta name="viewport" content="width=device-width">
  <link rel="stylesheet" type="text/css" href="/assets/notifications/styles.css">
  <!--[if !mso]><!-->
   <link href="https://fonts.googleapis.com/css?family=Lato:400,700" rel="stylesheet">
   <!--<![endif]-->
  <style>
  body{margin:0 !important;padding:0 !important;-webkit-text-size-adjust:100% !important;-ms-text-size-adjust:100% !important;-webkit-font-smoothing:antialiased !important}table{border-collapse:collapse;mso-table-lspace:0px;mso-table-rspace:0px}td,a,span{border-collapse:collapse;mso-line-height-rule:exactly}*{font-family:'Lato', Arial, sans-serif}table.body{background:#f8f8f8;text-align:center;height:100% !important;width:100% !important;border-spacing:0;border-collapse:collapse}table.main{width:640px}table.footer{border:0}table.container{width:100% !important}.content-wrap{background:#FFF;text-align:left}.row.header{margin:0 !important}.shop-name__cell{text-align:center;padding-top:20px;padding-bottom:50px}.order-number__cell{margin-top:0}.order-number__cell .title-bar{margin-bottom:24px}.order-number__text{font-size:22px;line-height:28px;margin-bottom:24px;display:block;text-align:center;text-transform:capitalize}.title-bar{background:#00AEEF;height:2px;width:39px;display:block;margin-left:auto;margin-right:auto}.content h2{font-size:28px;line-height:36px;margin-bottom:21px;text-align:center}.content p{font-size:18px;line-height:27px;color:#888;text-align:center}.row.action{margin:0}.row.section.customer-info{border:0}.row.section.customer-info .section__cell{padding:0}.actions__cell{padding-top:20px}.actions__cell .button,.actions__cell .link{width:230px}.main-action-cell{float:none;margin-left:auto;margin-right:auto !important}.secondary-action-cell{margin-top:10px;margin-left:auto;margin-right:auto}.button__text{background:#00AEEF;color:#FFF}.link__text{background:#FFF;color:#3E4B57;border:1px solid #A0A4A6;text-align:center}.section__heading{margin-bottom:30px}.section__cell{padding:60px 0;text-align:left}.section__cell h3{text-align:center;font-size:24px;line-height:20px;margin-bottom:24px}.order-list__item{border:0}.order-list__item__cell{text-align:left;background:#f8f8f8;padding:25px;border-top:solid 10px #fff}.order-list__item__cell table{width:100%}.order-list__item__cell table td{text-align:left;vertical-align:top}.order-list__product-image{border:0;border-radius:0}.order-list__item-title{font-size:20px;color:#111;line-height:22px;display:block;margin-bottom:10px}.order-list__item-color{font-size:14px;color:#111;line-height:18px;display:block;margin-bottom:4px}.order-list__item-material{font-size:14px;color:#888;line-height:16px;display:block;margin-bottom:12px}.order-list__item-quantity{font-size:13px;color:#111;line-height:16px;display:block}.order-list__item-original-price{color:#646464;font-size:13px}.order-list__item-price{color:#111}.subtotal-spacer{width:0}.subtotal-table{width:420px;margin-left:auto;margin-right:auto}.subtotal-lines{border:0;margin:0}.subtotal-line__title{text-align:left;color:#888;font-size:14px;line-height:1.6}.subtotal-line__value{text-align:right;color:#111;font-weight:700;font-size:14px;line-height:1.6}.subtotal-table--total{border-top-width:1px;border-bottom:solid 1px #e5e5e5}.subtotal-table--total td{padding-bottom:20px}.subtotal-table--total .subtotal-line__title{font-size:16px}.subtotal-table--total .subtotal-line__value{font-size:20px}.customer-info__items{background:#f8f8f8}.customer-info__items .rows{padding:20px 40px}.customer-info__item{text-align:left;padding:20px 0;vertical-align:top}.customer-info__item.last{border:0}.customer-info__item h4{color:#111;font-size:16px;line-height:1;margin-bottom:12px}.customer-info__item p,.customer-info__item span{color:#888;font-size:14px;line-height:22px}.customer-info__item strong{font-size:14px;line-height:22px}.customer-info__item span{display:inline-block;vertical-align:top;margin-top:5px}.customer-info__item-credit{margin-right:5px}.customer-info__item-content{margin:0}@media (min-width: 601px){td.main-spacer{height:80px}.content-wrap{padding:60px}}@media (max-width: 600px){table.main{width:100% !important}.content-wrap{padding:32px}.customer-info__item{border-bottom:solid 1px #e5e5e5}.customer-info__item.last{border:0}}.footer__cell{padding:28px;text-align:center}

</style>
</head>

  <body>
    <table class="body" width="100%">
      <tr>
        <td align="center">
          <table class="main" width="640px">
            <tr>
              <td class="main-spacer"></td>
            </tr>
            <tr>
              <td class="content-wrap">
                
                <table class="row header">
                  <tr>
                    <td class="header__cell">
                      <center>
                        <table class="container">
                          <tr>
                            <td>
                              <table class="row">
                                <tr>
                                  <td class="shop-name__cell">
                                    {%- if shop.email_logo_url %}
                                      <img src="{{shop.email_logo_url}}" alt="{{ shop.name }}" width="{{ shop.email_logo_width }}">
                                    {%- else %}
                                      <h1 class="shop-name__text">
                                        <a href="{{shop.url}}">{{ shop.name }}</a>
                                      </h1>
                                    {%- endif %}
                                  </td>
                                </tr>
                              </table>
                              <table class="row">
                                <tr>
                                  <td class="order-number__cell">
                                    <span class="order-number__text">
                                      Order {{ order_name }}
                                    </span>
                                    <span class="title-bar"></span>
                                  </td>
                                </tr>
                              </table>
                            </td>
                          </tr>
                        </table>
                      </center>
                    </td>
                  </tr>
                </table>

                <table class="row content">
                  <tr>
                    <td class="content__cell">
                      <center>
                        <table class="container">
                          <tr>
                            <td>
                              <h2>{{ email_title }}</h2>
                              <p>{{ email_body }}</p>
                              {% if order_status_url %}
                                <table class="row actions">
                                  <tr>
                                    <td class="actions__cell">
                                      <table class="button main-action-cell">
                                        <tr>
                                          <td class="button__cell"><a href="{{ order_status_url }}" class="button__text">View your order</a></td>
                                        </tr>
                                      </table>
                                      {% if shop.url %}
                                        <table class="link secondary-action-cell">
                                          <tr>
                                            <td class="link__cell"><a href="{{ shop.url }}" class="button__text link__text">Visit our store</a></td>
                                          </tr>
                                        </table>
                                      {% endif %}
                                    </td>
                                  </tr>
                                </table>
                              {% else %}
                                {% if shop.url %}
                                 <table class="row actions">
                                    <tr>
                                      <td class="actions__cell">
                                        <table class="button main-action-cell">
                                          <tr>
                                            <td class="button__cell"><a href="{{ shop.url }}" class="button__text">Visit our store</a></td>
                                          </tr>
                                        </table>
                                      </td>
                                    </tr>
                                 </table>
                                {% endif %}
                              {% endif %}
                            </td>
                          </tr>
                        </table>
                      </center>
                    </td>
                  </tr>
                </table>

                <table class="row section">
                  <tr>
                    <td class="section__cell">
                      <center>
                        <table class="section__heading">
                          <tr>
                            <td>
                              <h3>Order summary</h3>
                              <span class="title-bar"></span>
                            </td>
                          </tr>
                        </table>
                        <table class="row">
                          {% for line in line_items %}
                          <tr class="order-list__item">
                            <td class="order-list__item__cell">
                              <table>
                                <td>
                                  {% if line.image %}
                                    <img src="{{ line | img_url: 'compact_cropped' }}" width="60" height="60" class="order-list__product-image"/>
                                  {% endif %}
                                </td>
                                <td class="order-list__product-description-cell">
                                  {% if line.product.title %}
                                    {% assign productNameParts = line.product.title | split: '-' %}
                                    {% assign line_title = productNameParts[0] %}
                                  {% else %}
                                    {% assign line_title = line.title %}
                                  {% endif %}

                                  {% if line.quantity < line.quantity %}
                                    {% capture line_display %}{{ line.quantity }} of {{ line.quantity }}{% endcapture %}
                                  {% else %}
                                    {% capture line_display %}Qty: {{ line.quantity }}{% endcapture %}
                                  {% endif %}

                                  <span class="order-list__item-title">{{ line_title }}</span>

                                  {% if productNameParts[2] != blank %}
                                    <span class="order-list__item-color">{{ productNameParts[2] | trim }}</span>
                                  {% endif %}
                                  {% if productNameParts[1] != blank %}
                                    <span class="order-list__item-material">{{ productNameParts[1] | trim }}</span>
                                  {% endif %}

                                  <span class="order-list__item-quantity">{{ line_display }}</span>
                                </td>
                                  <td class="order-list__price-cell">
                                    <p class="order-list__item-price">{{ line.line_price | money }}</p>
                                    {% if line.original_line_price != line.line_price %}
                                      <del class="order-list__item-original-price">{{ line.original_line_price | money }}</del>
                                    {% endif %}
                                  </td>
                              </table>
                            </td>
                          </tr>{% endfor %}
                        </table>
                        <table class="row subtotal-lines">
                          <tr>
                            <td class="subtotal-spacer"></td>
                            <td>
                              <table class="row subtotal-table">
                                {% if discounts %}
                                  {% capture discount_title %}Discount {% if discounts.first.code %}({{ discounts.first.code }}){% endif %}{% endcapture %}
                                  <tr class="subtotal-line">
                                    <td class="subtotal-line__title">
                                      {{ discount_title }}
                                    </td>
                                    <td class="subtotal-line__value">
                                      {{ discounts_savings | money }}
                                    </td>
                                  </tr>
                                {% endif %}
                                <tr class="subtotal-line">
                                  <td class="subtotal-line__title">
                                    Subtotal
                                  </td>
                                  <td class="subtotal-line__value">
                                    {{ subtotal_price | money }}
                                  </td>
                                </tr>
                                <tr class="subtotal-line">
                                  <td class="subtotal-line__title">
                                    Shipping
                                  </td>
                                  <td class="subtotal-line__value">
                                    {{ shipping_price | money }}
                                  </td>
                                </tr>
                                {% for line in tax_lines %}
                                  <tr class="subtotal-line">
                                    <td class="subtotal-line__title">
                                      {{ line.title }}
                                    </td>
                                    <td class="subtotal-line__value">
                                      {{ line.price | money }}
                                    </td>
                                  </tr>
                                {% endfor %}
                              </table>
                              <table class="row subtotal-table subtotal-table--total">
                                <tr class="subtotal-line">
                                  <td class="subtotal-line__title">
                                    Total
                                  </td>
                                  <td class="subtotal-line__value">
                                    {{ total_price | money_with_currency }}
                                  </td>
                                </tr>
                              </table>
                              {% assign transaction_size = 0 %}
                              {% for transaction in transactions %}
                                {% unless transaction.kind == "capture" or transaction.kind == "void" %}
                                  {% assign transaction_size = transaction_size | plus: 1 %}
                                {% endunless %}
                              {% endfor %}
                              {% if transaction_size > 1 %}
                                <table class="row subtotal-table">
                                  <tr><td colspan="2" class="subtotal-table__small-space"></td></tr>
                                  {% for transaction in transactions %}
                                    {% if transaction.status == "success" and transaction.kind == "authorization" or transaction.kind == "sale" %}
                                      {% if transaction.payment_details.credit_card_company %}
                                        {% capture transaction_name %}{{ transaction.payment_details.credit_card_company }} (ending in {{ transaction.payment_details.credit_card_last_four_digits }}){% endcapture %}
                                      {% else %}
                                        {% capture transaction_name %}{{ transaction.gateway | replace: "_", " " | capitalize }}{% endcapture %}
                                      {% endif %}
                                      <tr class="subtotal-line">
                                        <td class="subtotal-line__title">
                                          {{transaction_name}}
                                        </td>
                                        <td class="subtotal-line__value">
                                          {{ transaction.amount | money }}
                                        </td>
                                      </tr>
                                    {% endif %}
                                    {% if transaction.kind == 'refund' %}
                                      {% if transaction.payment_details.credit_card_company %}
                                        {% assign refund_method_title = transaction.payment_details.credit_card_company %}
                                      {% else %}
                                        {% assign refund_method_title = transaction.gateway %}
                                      {% endif %}
                                      <tr class="subtotal-line">
                                        <td class="subtotal-line__title">
                                          Refund<br>
                                          <small>{{ refund_method_title | capitalize }}</small>
                                        </td>
                                        <td class="subtotal-line__value">
                                          - {{ transaction.amount | money }}
                                        </td>
                                      </tr>
                                    {% endif %}
                                  {% endfor %}
                                </table>
                              {% endif %}
                            </td>
                          </tr>
                        </table>
                      </center>
                    </td>
                  </tr>
                </table>

                <table class="row section customer-info">
                  <tr>
                    <td class="section__cell">
                      <center>
                        <table class="section__heading">
                          <tr>
                            <td>
                              <h3>Customer information</h3>
                              <span class="title-bar"></span>
                            </td>
                          </tr>
                        </table>
                        <table class="container customer-info__items">
                          <tr>
                            <td class="rows">
                              <table class="row">
                                <tr>
                                  {% if requires_shipping and shipping_address %}
                                  <td align="top" class="customer-info__item">
                                    <h4>Shipping address</h4>
                                    {{ shipping_address | format_address }}
                                  </td>
                                  {% endif %}
                                  {% if billing_address %}
                                  <td align="top" class="customer-info__item">
                                    <h4>Billing address</h4>
                                    {{ billing_address | format_address }}
                                  </td>
                                  {% endif %}
                                </tr>
                              </table>
                              <table class="row">
                                <tr>
                                  {% if requires_shipping and shipping_address %}
                                  <td align="top" class="customer-info__item">
                                    <h4>Shipping method</h4>
                                    <p>{{ shipping_method.title }}</p>
                                  </td>
                                  {% endif %}
                                  {% assign transaction_count = transactions | size %}
                                  {% if transaction_count > 0 %}
                                  <td align="top" class="customer-info__item last">
                                    <h4>Payment method</h4>
                                    {% for transaction in transactions %}
                                      {% if transaction.status == "success" or transaction.status == "pending" %}
                                        {% if transaction.kind == "authorization" or transaction.kind == "sale" %}
                                          <p class="customer-info__item-content">
                                            {% if transaction.payment_details.credit_card_company %}
                                              {% capture credit_card_url %}notifications/{{ transaction.payment_details.credit_card_company | downcase | replace: " ", "_" }}.png{% endcapture %}
                                              <img src="{{ credit_card_url | shopify_asset_url }}" class="customer-info__item-credit" height="24">
                                              <span>Ending in {{ transaction.payment_details.credit_card_last_four_digits }} — <strong>{{ transaction.amount | money }}</strong></span>
                                            {% else %}
                                              {{ transaction.gateway | replace: "_", " " | capitalize }} — <strong>{{ transaction.amount | money }}</strong>
                                            {% endif %}
                                          </p>
                                        {% endif %}
                                      {% endif %}
                                    {% endfor %}
                                  </td>
                                  {% endif %}
                                </tr>
                              </table>
                            </td>
                          </tr>
                        </table>
                      </center>
                    </td>
                  </tr>
                </table>
                
              </td>
            </tr>
            <tr>
              <td>
                <table class="row footer">
                  <tr>
                    <td class="footer__cell">
                      <center>
                        <table class="container">
                          <tr>
                            <td align="center" style="border-bottom: solid 1px #e6e6e6; padding-bottom: 28px">
                              <p class="disclaimer__subtext">If you have any questions, reply to this email or contact us at <a style="color:#00AEEF" href="mailto:{{ shop.email }}">{{ shop.email }}</a></p>
                            </td>
                          </tr>
                          <tr>
                            <td align="center" valign="middle" style="padding-top: 28px">
                            <a style="display: inline-block; padding: 0 15px;" href="http://on.fb.me/UJbzFY"><img width="8" src="{{'logo-facebook-2x.png' | asset_url }}" alt="{{shop.name}} on Facebook" /></a>
                            <a style="display: inline-block; padding: 0 15px;" href="http://bit.ly/loandsonstwitter"><img width="18" src="{{'logo-twitter-2x.png' | asset_url }}" alt="{{shop.name}} on Twitter" /></a>
                            <a style="display: inline-block; padding: 0 15px;" href="http://bit.ly/loandsonsinstagram"><img width="18" src="{{'logo-instagram-2x.png' | asset_url }}" alt="{{shop.name}} on Instagram" /></a>
                            <a style="display: inline-block; padding: 0 15px;" href="http://bit.ly/loandsonspinterest"><img width="15" src="{{'logo-pinterest-2x.png' | asset_url }}" alt="{{shop.name}} on Pinterest" /></a></td>
                          </tr>
                        </table>
                      </center>
                    </td>
                  </tr>
                </table>

                <img src="{{ 'notifications/spacer.png' | shopify_asset_url }}" class="spacer" height="1" />
              </td>
            </tr>
          </table>
        </td>
      </tr>
    </table>
  </body>
</html>
