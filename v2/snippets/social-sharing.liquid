<!-- /snippets/social-sharing.liquid -->
<div class="social-sharing">

  {% if settings.share_facebook %}
    <a target="_blank" class="share-btn facebook" href="//www.facebook.com/sharer.php?u={{ shop.url | append: share_permalink }}">
      <span class="sr-only">{{ 'general.social.alt_text.share_on_facebook' | t }}</span>
    </a>
  {% endif %}

  {% if settings.share_twitter %}
    <a target="_blank" class="share-btn twitter" href="//twitter.com/share?text={{ share_title | url_param_escape }}&amp;url={{ shop.url | append: share_permalink }}">
      <span class="sr-only">{{ 'general.social.alt_text.share_on_twitter' | t }}</span>
    </a>
  {% endif %}

  {% if settings.share_pinterest %}
    <a target="_blank" class="share-btn pinterest" href="//pinterest.com/pin/create/button/?url={{ shop.url | append: share_permalink }}&amp;media={{ share_image | img_url: '1024x1024' }}&amp;description={{ share_title | url_param_escape }}">
      <span class="sr-only">{{ 'general.social.alt_text.share_on_pinterest' | t }}</span>
    </a>
  {% endif %}

  {% if settings.share_email %}
    <a class="share-btn email" href="mailto:?body={{ shop.url | append: share_permalink }}&amp;subject=Found on loandsons.com: {{ share_title | url_param_escape }}">
      <span class="sr-only">{{ 'general.social.alt_text.share_in_email' | t }}</span>
    </a>
  {% endif %}

</div>
